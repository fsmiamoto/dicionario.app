{
  "name": "dicionario",
  "version": "0.0.2",
  "description": "AI-powered vocabulary learning companion with visual context and explanations",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "nodemon",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p src/main/tsconfig.json && npx cpx2 \"src/main/prompts/**\" \"dist/main/prompts\"",
    "build:renderer": "vite build",
    "electron": "NODE_ENV=development electron .",
    "electron:prod": "electron .",
    "pack": "electron-builder",
    "format": "prettier --write src/**/*",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "language-learning",
    "vocabulary",
    "dicionario",
    "ai-education",
    "electron",
    "education"
  ],
  "author": "Flavio Miyamoto",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/fs-extra": "^11.0.4",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/sql.js": "^1.4.4",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cpx2": "^8.0.0",
    "electron": "^27.1.3",
    "electron-builder": "^24.7.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^23.0.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.32",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.2",
    "vite": "^5.0.5",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "marked": "^16.2.1",
    "openai": "^4.20.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "sql.js": "^1.8.0"
  },
  "build": {
    "appId": "com.dicionario.app",
    "productName": "Dicionario",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "build/icons/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons/icon.png"
    }
  }
}
